- content_for :css do
  = stylesheet_link_tag "pages/blog/blog", media: "all"
.span1
  &nbsp;
.span7
  .blogblock.bloghead= render "bloghead"
  .blogblock
    - if @categories.count > 0
      - @categories.each do |c|
        .category{:id => "article-#{c.id}"}
          %h2= c.name
          .desc= c.description
    - else
      There are no categories
.span3
  .rightside
    Twitter & Facebook Here
    %h1 Twitter
    %script{:charset => "utf-8", :src => "http://widgets.twimg.com/j/2/widget.js"}
    :javascript
      new TWTR.Widget({
        version: 2,
        type: 'profile',
        rpp: 8,
        interval: 30000,
        width: 'auto',
        height: 300,
        theme: {
          shell: {
            background: '#bfbfbf',
            color: '#4f4f4f'
          },
          tweets: {
            background: '#6b6b6b',
            color: '#fff8eb',
            links: '#fcba56'
          }
        },
        features: {
          scrollbar: false,
          loop: false,
          live: true,
          behavior: 'all'
        }
      }).render().setUser('actatlys').start();
.span1
  &nbsp;
