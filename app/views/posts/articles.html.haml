- content_for :js do
  :javascript
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'actatlys'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    }());
- content_for :css do
  = stylesheet_link_tag "pages/blog/blog", media: "all"
.span1
  &nbsp;
.span7
  .blogblock.bloghead= render "bloghead"
  .blogblock
    - if @articles.count > 0
      - @articles.each do |a|
        = render "articles", a: a
    - else
      There are no articles matching your criteria!
.span3
  .rightside
    %h1{style: "font-weight:300"} Twitter
    %script{:charset => "utf-8", :src => "http://widgets.twimg.com/j/2/widget.js"}
    :javascript
      new TWTR.Widget({
        version: 2,
        type: 'profile',
        rpp: 8,
        interval: 30000,
        width: 'auto',
        height: 300,
        theme: {
          shell: {
            background: '#bfbfbf',
            color: '#4f4f4f'
          },
          tweets: {
            background: '#6b6b6b',
            color: '#fff8eb',
            links: '#fcba56'
          }
        },
        features: {
          scrollbar: false,
          loop: false,
          live: true,
          behavior: 'all'
        }
      }).render().setUser('actatlys').start();

.span1
  &nbsp;
