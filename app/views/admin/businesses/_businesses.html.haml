- @businesses.each do |b|
  %tr
    %td
      = b.id
    %td
      = b.name
    %td
      = truncate(b.uvp, :length => 100)
    %td.tableactions
      %a.btn{:href => admin_approve_business_path(b), :class => b.approved ? "btn-warning" : "btn-info", :method => "put" }= b.approved ? "Unapprove" : "Approve"
      %a.btn{:href => edit_admin_business_path(b)} Edit
      %a.btn.btn-danger{:href => admin_business_path(b), "data-method" => :delete, "data-confirm" => "Are you sure?"} Delete
